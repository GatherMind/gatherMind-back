package woongjin.gatherMind.repository;

import org.springframework.data.jpa.repository.JpaRepository;
import org.springframework.data.jpa.repository.Query;
import org.springframework.stereotype.Repository;
import woongjin.gatherMind.entity.ProfileImageMapping;

import java.util.Optional;

@Repository
public interface ProfileImageMappingRepository extends JpaRepository<ProfileImageMapping, Long> {
//  특정 사용자의 프로필 이미지 매핑 정보를 조회
    @Query("SELECT p FROM ProfileImageMapping p WHERE p.member.memberId = :memberId")
    Optional<ProfileImageMapping> findByMemberId(String memberId);


//    특정 파일 메타데이터 ID로 프로필 이미지 매핑 정보를 조회
    Optional<ProfileImageMapping> findByFileMetadata_FileMetadataId(Long fileMetadataId);
}
